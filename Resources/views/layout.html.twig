{% set route, routeParams = app.request.get('_route'), app.request.get('_route_params') %}
<!DOCTYPE html>
<html {{ sonata_seo_html_attributes() }}>
<head {{ sonata_seo_head_attributes() }}>
    {{ sonata_seo_metadatas() }}
    {{ sonata_seo_lang_alternates() }}
    {{ sonata_seo_title() }}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ asset('bundles/seferovblog/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/seferovblog/css/style.css') }}" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% block head %}{% endblock %}
    {% block stylesheet %} {% endblock %}
</head>

<body>
<div class="header">
    <div class="container">
        <div class="row pb10">
            <nav class="navbar navbar-default">
                <div class="">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="pull-left" href="/">
                            <h1>Blog</h1>
                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="menu">
        <div class="container">
            {{ wo_render_breadcrumbs() }}
        </div>
    </div>
</div>

<div class="main container">
    {% block main %}
        <div class="col-sm-8">
            {% block content %}{% endblock %}
        </div>
        <div class="col-sm-4">
            {% block sidebar %}
                {% include '@SeferovBlog/Widget/content.html.twig' %}
                {% include '@SeferovBlog/Widget/facebookPage.html.twig' %}
            {% endblock %}
        </div>
    {% endblock %}
</div>

<footer>
    <div class="container">
        <div class="row footer-nav">
            <span class="copyright pull-left">&copy; {{ "common.all-rights-reserved"|trans }}</span>
        </div>
    </div>
</footer>

<script src="{{ asset('js/bootstrap.min.js') }}"></script>
<script src="{{ asset('js/ie10-viewport-bug-workaround.js') }}"></script>
{% block js %}{% endblock %}
{% if seferov_blog_config.widgets.facebook.app_id is defined %}
    {% include '@SeferovBlog/Widget/facebookJs.html.twig' %}
{% endif %}
</body>
</html>
