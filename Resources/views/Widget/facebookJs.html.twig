{% if seferov_blog_config.widgets.facebook.app_id is defined %}
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/{{ seferov_blog_config.widgets.facebook.locale }}/sdk.js#xfbml=1&version={{ seferov_blog_config.widgets.facebook.version }}&appId={{ seferov_blog_config.widgets.facebook.app_id }}";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
{% endif %}
